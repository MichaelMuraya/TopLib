<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TopLib</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-cerulean.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <header width="70%">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">TopLib </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav mr-auto">

                        <ul class="nav nav-pills flex-column">

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Topics</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Topics" asp-action="Index">All Topics</a>
                                    <a class="dropdown-item" asp-controller="Topics" asp-action="Index">Delete Topics</a>
                                    <a class="dropdown-item" asp-controller="Topics" asp-action="Index">Edit Topics</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-controller="Topics" asp-action="Insert">Add Topics</a>
                                </div>
                            </li>

                        </ul>


                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Topics" asp-action="Insert">Add Topics</a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>

                        </li>
                    </ul>
                </div>
            </nav>

        </nav>
    </header>




    <div class="container">
        <main role="main" class="pb-3">

            @RenderBody()

        </main>
    </div>


        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2019 - TopLib - <a asp-area="" asp-controller="Home" asp-action="Index">Contact</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
</body>
</html>
