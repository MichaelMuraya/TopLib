@model IEnumerable<TopLib.Models.Topic>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Topics</h1>

<p>
    <a asp-controller="Topics" asp-action="Insert">Create New</a>
</p>

<form asp-controller="Topics" asp-action="Index" method="post">    
        <table class="table">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EstimatedTimeToMaster)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TimeSpent)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SourceOf)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartLearningDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InProgress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CompletionDate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EstimatedTimeToMaster)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TimeSpent)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SourceOf)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartLearningDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InProgress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompletionDate)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
    }
